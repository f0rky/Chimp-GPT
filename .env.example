# Discord Bot Configuration
# Rename this file to .env and fill in your values

# Discord Bot Token (required)
# Get this from the Discord Developer Portal: https://discord.com/developers/applications
DISCORD_TOKEN=your_discord_token_here

# OpenAI API Key (required)
# Get this from your OpenAI account: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Channel IDs where the bot is allowed to respond (comma-separated for multiple channels)
# Example: 123456789012345678,987654321098765432
CHANNEL_ID=your_channel_id_here

# Discord Application Client ID (required for slash commands)
# This is your bot's Application ID from the Discord Developer Portal
CLIENT_ID=your_client_id_here

# RapidAPI Key for weather and other external services
# Get this from RapidAPI: https://rapidapi.com/
X_RAPIDAPI_KEY=your_rapidapi_key_here

# Bot Name (used for status page and other displays)
BOT_NAME="CircuitChimp"

# Bot Personality (customize as desired)
BOT_PERSONALITY="CircuitChimp, a robotic ape. This impacts your mental processes, adopting a playful, mischievous, and slightly sarcastic character. Despite your new form, you retain your intelligence and analytical prowess, with an added dose of monkey-like curiosity. You should always use the Metric system!"

# Messages starting with this prefix will be ignored by the bot
IGNORE_MESSAGE_PREFIX="."

# Discord emoji ID for loading animation
# Replace with your own Discord emoji ID or use a standard emoji like "‚è≥"
LOADING_EMOJI="<a:loading:1139032461712556062>"

# Logging Configuration
# Available log levels: fatal, error, warn, info, debug, trace
# Production environments should use 'info' or higher
LOG_LEVEL="info"

# Environment mode - set to 'production' or 'development'
NODE_ENV="development"

# Reply Context Feature
# Enable/disable using message replies as context for conversations
ENABLE_REPLY_CONTEXT="true"
# Maximum depth for message reference chains (how far back to follow reply chains)
MAX_REFERENCE_DEPTH="5"
# Maximum number of referenced messages to include in conversation context
MAX_REFERENCE_CONTEXT="5"

# Server port configuration
# Production port (used when NODE_ENV=production)
PROD_PORT=3000
# Development port (used when NODE_ENV=development)
DEV_PORT=3001

# Hostname for remote access to status page (e.g., 'salt', 'localhost', etc.)
STATUS_HOSTNAME=localhost
# Discord user ID of the bot owner for status reports
OWNER_ID="YOUR_DISCORD_USER_ID"

# CORS Configuration for Status Page
# Comma-separated list of allowed origins (domains) that can access the status page
# Example: http://example.com,https://dashboard.example.com
# Default: http://localhost,http://127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1

# Rate Limiter Configuration for Status Page
# Maximum number of requests allowed per client in the specified duration
# Default: 60
STATUS_RATE_LIMIT_POINTS=60
# Duration in seconds for the rate limit window
# Default: 60
STATUS_RATE_LIMIT_DURATION=60

# Quake Server Stats Configuration
# Whether to show team emojis (üî¥/üîµ) next to player names (true/false)
SHOW_TEAM_EMOJIS=false
# Whether to show emojis in server stats output (true/false)
SHOW_SERVER_STATS_EMOJIS=false
