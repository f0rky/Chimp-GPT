{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Combined App",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/combined.js",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Discord Bot Only",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/chimpGPT.js",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Status Server Only",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/statusServer.js",
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Tests",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/tests/runTests.js",
      "envFile": "${workspaceFolder}/.env.test",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Test",
      "skipFiles": ["<node_internals>/**"],
      "program": "${file}",
      "envFile": "${workspaceFolder}/.env.test",
      "console": "integratedTerminal"
    }
  ]
}
